                  li 
                    a(href="#lkPossibility").js-tabs-trigger Возможности партнера

            .lk__main 

              .js-tabs-content.open(data-href="#lkData")

                h2.lk__title Мои данные

                form(action="#").lk__form 

                  .lk__form-block 
                    .lk__subtitle Личная информация:
                    .row 
                      .col-md-6 
                        .input 
                          input(type="text" placeholder="Имя")
                      .col-md-6 
                        .input 
                          input(type="text" placeholder="Фамилия")
                      .col-md-6 
                        .input.input--has-icon
                          input(type="text" placeholder="Дата рождения")#airDatepickerBirthday
                          svg(class="icon-calendar")
                            use(xlink:href="img/sprite.svg#calendar")
                      .col-md-6 
                        .lk__gender 
                          .lk__gender-text Пол: 
                          label.radio 
                            input(type="radio" name="gender")
                            span.radio__circle 
                            span Мужской
                          label.radio 
                            input(type="radio" name="gender")
                            span.radio__circle 
                            span Женский

                  .lk__form-block 
                    .lk__subtitle Адрес доставки:
                    .row 
                      .col-md-6 
                        .input 
                          input(type="text" placeholder="Город")
                      .col-md-6 
                        .input 
                          input(type="text" placeholder="Улица")
                      .col-md-4 
                        .input 
                          input(type="number" placeholder="Дом")
                      .col-md-4 
                        .input 
                          input(type="number" placeholder="Корпус")
                      .col-md-4 
                        .input 
                          input(type="number" placeholder="Квартира")

                  .lk__form-block 
                    .lk__subtitle Контактная информация:
                    .lk__contact 
                      .lk__contact-item 
                        .lk__contact-name Номер телефона
                        .lk__contact-value + 7 (916) 111 12 22
                        .lk__contact-btn изменить
                      .lk__contact-item 
                        .lk__contact-name Email
